<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://pizzaBrowse.caption"
        focusComponent="pizzasTable"
        messagesPack="ru.rosatom.pizzeria.web.screens.pizza">
    <data readOnly="true">
        <collection id="pizzasDc"
                    class="ru.rosatom.pizzeria.entity.Pizza"
                    view="pizza-view">
            <loader id="pizzasDl">
                <query>
                    <![CDATA[select e from pizzeria_Pizza e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="pizzasTable"
            spacing="true">
        <filter id="filter"
                applyTo="pizzasTable"
                dataLoader="pizzasDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="pizzasTable"
                    width="100%"
                    dataContainer="pizzasDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="calories"/>
                <column id="price"/>
                <column id="size"/>
                <column id="description"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="pizzasTable.create"/>
                <button id="editBtn" action="pizzasTable.edit"/>
                <button id="removeBtn" action="pizzasTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
