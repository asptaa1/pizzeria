<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://ingredientBrowse.caption"
        focusComponent="ingredientsTable"
        messagesPack="ru.rosatom.pizzeria.web.screens.ingredient">
    <data readOnly="true">
        <collection id="ingredientsDc"
                    class="ru.rosatom.pizzeria.entity.Ingredient"
                    view="ingredient-view">
            <loader id="ingredientsDl">
                <query>
                    <![CDATA[select e from pizzeria_Ingredient e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ingredientsTable"
            spacing="true">
        <filter id="filter"
                applyTo="ingredientsTable"
                dataLoader="ingredientsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ingredientsTable"
                    width="100%"
                    dataContainer="ingredientsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="amount"/>
                <column id="topping"/>
                <column id="pizza"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ingredientsTable.create"/>
                <button id="editBtn" action="ingredientsTable.edit"/>
                <button id="removeBtn" action="ingredientsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
