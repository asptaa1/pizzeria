<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://orderItemBrowse.caption"
        focusComponent="orderItemsTable"
        messagesPack="ru.rosatom.pizzeria.web.screens.orderitem">
    <data readOnly="true">
        <collection id="orderItemsDc"
                    class="ru.rosatom.pizzeria.entity.OrderItem"
                    view="orderItem-view">
            <loader id="orderItemsDl">
                <query>
                    <![CDATA[select e from pizzeria_OrderItem e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="orderItemsTable"
            spacing="true">
        <filter id="filter"
                applyTo="orderItemsTable"
                dataLoader="orderItemsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="orderItemsTable"
                    width="100%"
                    dataContainer="orderItemsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="pizza"/>
                <column id="quantity"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="orderItemsTable.create"/>
                <button id="editBtn" action="orderItemsTable.edit"/>
                <button id="removeBtn" action="orderItemsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
