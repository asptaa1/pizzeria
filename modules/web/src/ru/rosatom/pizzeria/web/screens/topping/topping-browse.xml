<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://toppingBrowse.caption"
        focusComponent="toppingsTable"
        messagesPack="ru.rosatom.pizzeria.web.screens.topping">
    <data readOnly="true">
        <collection id="toppingsDc"
                    class="ru.rosatom.pizzeria.entity.Topping">
            <view extends="_local"/>
            <loader id="toppingsDl">
                <query>
                    <![CDATA[select e from pizzeria_Topping e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="toppingsTable"
            spacing="true">
        <filter id="filter"
                applyTo="toppingsTable"
                dataLoader="toppingsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="toppingsTable"
                    width="100%"
                    dataContainer="toppingsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="spicy"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="toppingsTable.create"/>
                <button id="editBtn" action="toppingsTable.edit"/>
                <button id="removeBtn" action="toppingsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
